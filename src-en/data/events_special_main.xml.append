<event name="EG_SECOND_VOICE_CIVIL_BUTTON"> <!-- method was brazenly stolen from Forgotten Races. Thanks to Gabriel! -->
    <eventButton name="EG_UI_CIVILIAN_BUTTON">
        <event load="EG_CIVILIAN_BUTTON"/>
        <image>statusUI/eg_civilian</image>
        <customLocation x="378" y="52"/>
        <tooltip>View the benefits of a civilian vessel.</tooltip>
        <inactiveTooltip>Civilian vessel benefits are not currently available.</inactiveTooltip>
        <jumpClear>false</jumpClear>
        <noDanger>true</noDanger>
        <req lvl="1">EG_SECOND_VOICE_REQ_REAL</req>
        <hideInactive>false</hideInactive>
    </eventButton>
	<triggeredEvent event="EG_SECOND_VOICE_CIVIL_VAR" loops="999999999" jumps="1"/>
	<loadEvent>START_BEACON_BOARDING</loadEvent>
</event>

<event name="EG_SECOND_VOICE_CIVIL_VAR">
	<variable name="eg_second_voice_req" op="set" val="1"/>
</event>

<event name="EG_NEOSTAR_BUTTON"> <!-- method was brazenly stolen from Forgotten Races. Thanks to Gabriel! -->
    <eventButton name="EG_UI_NEOSTAR_BUTTON">
        <event load="EG_NEOSTAR_BUTTON_REAL"/>
        <image>statusUI/eg_neostar</image>
        <customLocation x="378" y="52"/>
        <tooltip>Neostar Form (R) Menu.</tooltip>
        <inactiveTooltip>You must be out of danger!</inactiveTooltip>
        <jumpClear>false</jumpClear>
        <noDanger>true</noDanger>
        <req lvl="1">EG_SHIP_NEOSTAR</req>
        <hideInactive>false</hideInactive>
    </eventButton>
	<playSound>eg_neostar_blank</playSound>
	<variable name="neostar_cargo_available_task" op="add" val="2"/>
	<loadEvent>START_BEACON_BOARDING</loadEvent>
</event>

