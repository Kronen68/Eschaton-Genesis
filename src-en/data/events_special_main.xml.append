<event name="EG_CIVILIAN_BARTER_1">
	<text load="EG_CIVILIAN_BARTER_TEXT"/>
	<variable name="eg_second_voice_req" op="set" val="0"/>
	<modifyPursuit amount="1"/>
	<choice>
		<text>Exchange:</text>
		<event>
			<item_modify>
				<item type="fuel" min="4" max="6"/>
				<item type="drones" min="-2" max="-1"/>
			</item_modify>
		</event>
	</choice>
	<choice>
		<text>Exchange:</text>
		<event>
			<item_modify>
				<item type="missiles" min="5" max="7"/>
				<item type="fuel" min="-4" max="-3"/>
			</item_modify>
		</event>
	</choice>
	<choice>
		<text>Exchange:</text>
		<event>
			<item_modify>
				<item type="scrap" min="21" max="33"/>
				<item type="missiles" min="-4" max="-3"/>
			</item_modify>
			<disableScrapAugments/>
		</event>
	</choice>
	<choice>
		<text>Exchange:</text>
		<event>
			<item_modify>
				<item type="scrap" min="17" max="30"/>
				<item type="fuel" min="-4" max="-3"/>
			</item_modify>
			<disableScrapAugments/>
		</event>
	</choice>
	<choice>
		<text>Do not exchange.</text>
		<event/>
	</choice>
</event>

